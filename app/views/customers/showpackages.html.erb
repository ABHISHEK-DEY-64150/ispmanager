<!-- database_table.erb -->

<style>
  table {
    border-collapse: collapse;
    width: 100%;
    border: 2px solid green;
  }

  th, td {
    padding: 8px;
    text-align: left;
    border: 1px solid green;
  }

  th {
    background-color: lightgreen;
  }
</style>

<table align='center'>
  <thead>
    <tr>
      <% @fields.each do |field| %>
        <th><%= field %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <% record.values.first(5).each do |value| %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
